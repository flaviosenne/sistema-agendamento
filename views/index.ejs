    <script>
        var div = document.getElementById('calendar')
        var calendar = new FullCalendar.Calendar(div, {
            initialView: 'dayGridMonth',
            locale: 'pt-br',
            // esse atributo events vai simplesmente pegar
            // o objeto que contém:
            //{id, title, start, end}
            // que está na rota calendar
            events: 'calendar',
            eventClick: function(info){
                window.location.href = '/event/' +info.event.id
            }
        })

        calendar.render()
    
    </script>
